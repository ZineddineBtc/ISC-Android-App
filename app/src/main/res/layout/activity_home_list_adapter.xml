<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Core.Fragments.HomeListAdapter"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/posterProfileLayout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/posterProfileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/img0"
                    android:background="#ffffff"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"/>
                <TextView
                    android:id="@+id/posterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/posterPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/postLevelButtonHomeAdapter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:elevation="0dp"
                android:src="@drawable/ic_public_24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"/>
            <ImageButton
                android:id="@+id/tagColleagueButtonHomeAdapter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:elevation="0dp"
                android:src="@drawable/ic_supervisor_account_black_24dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/postEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/special"
            android:textSize="12sp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/postedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/postedImage"
        android:src="@drawable/img1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:maxHeight="100dp"
        android:maxWidth="100dp"/>
</LinearLayout>