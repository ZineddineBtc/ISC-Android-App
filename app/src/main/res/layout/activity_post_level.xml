<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Core.PostLevelActivity"
    android:background="@drawable/white_background_border">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        android:layout_margin="10dp"
        android:text="@string/post_level_text"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/mll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.99"/>
    <LinearLayout
        android:id="@+id/mll"
        android:background="@drawable/less_gray_less_rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/level_0_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/level_0_text"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="Communication"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/level_0"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/level_1_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/level_1_text"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="Media"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/level_1"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/level_2_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/level_2_text"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="External Relations"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/level_2"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/level_3_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/level_3_text"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="Technicals"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/level_3"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/level_4_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/level_4_text"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="Human Resources"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/level_4"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/level_5_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/level_5_text"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="Logistics"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/level_5"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/postLevelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_borders"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/mll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1"/>
</androidx.constraintlayout.widget.ConstraintLayout>