<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Core.CoreActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentsFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomTabGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintVertical_bias="0"/>

    <GridLayout
        android:id="@+id/bottomTabGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/tab_grid_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="1"
        android:columnCount="4"
        android:rowCount="1"
        android:rowOrderPreserved="true"
        android:alignmentMode="alignBounds"
        android:elevation="10dp">
        <ImageButton
            android:src="@drawable/ic_home_blue_24dp"
            android:onClick="switchFragment"
            android:id="@+id/homeTabButton"
            android:background="@drawable/tab_button_background"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:gravity="center"/>
        <ImageButton
            android:src="@drawable/ic_message_black_24dp"
            android:onClick="switchFragment"
            android:id="@+id/messageTabButton"
            android:background="@drawable/tab_button_background"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:gravity="center"
            />
        <ImageButton
            android:src="@drawable/ic_notifications_black_24dp"
            android:onClick="switchFragment"
            android:id="@+id/notificationTabButton"
            android:background="@drawable/tab_button_background"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:gravity="center"/>
        <ImageButton
            android:src="@drawable/ic_person_black_24dp"
            android:onClick="switchFragment"
            android:id="@+id/profileTabButton"
            android:background="@drawable/tab_button_background"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:gravity="center"/>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>